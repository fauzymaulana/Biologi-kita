<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".menuUtama"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/bio"/>

        <RelativeLayout
            android:layout_below="@id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/satu"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/untukframe">

                <ImageView
                    android:id="@+id/i"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="70dp"
                    android:layout_gravity="center|top"

                    android:layout_height="80dp"
                    android:src="@drawable/rangkuman"

                    />
                <Button
                    android:id="@+id/but1"
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:background="@drawable/btnmenu"/>
                <TextView
                    android:id="@+id/t"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="120dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="RANGKUMAN"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/dua"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/untukframe2">

                <ImageView
                    android:id="@+id/k"
                    android:layout_width="80dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center|top"
                    android:layout_height="100dp"
                    android:src="@drawable/eva"

                    />
                <Button
                    android:id="@+id/but2"
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:background="@drawable/btnmenu"/>
                <TextView
                    android:id="@+id/l"
                    android:layout_marginTop="120dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="EVALUASI"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/tiga"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"

                android:layout_below="@id/dua"
                android:background="@drawable/untukframe3">

                <ImageView
                    android:id="@+id/ti"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/abou"
                    />
                <Button
                    android:id="@+id/but3"
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:background="@drawable/btnmenu"/>
                <TextView
                    android:id="@+id/tii"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABOUT"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/empat"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/dua"
                android:background="@drawable/untukframe4">

                <ImageView
                    android:id="@+id/ei"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/us"

                    />
                <Button
                    android:id="@+id/but4"
                    android:layout_width="190dp"
                    android:layout_height="160dp"
                    android:background="@drawable/btnmenu"/>
                <TextView
                    android:id="@+id/eii"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ME."
                    />
            </FrameLayout>


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>